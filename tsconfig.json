{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@themes/*": [
        "src/themes/*"
      ],
      "@public/*": [
        "public/*"
      ],
      "@core/*": [
        "src/core/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@config/*": [
        "config/*"
      ]
    },
  },
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "out",
    "next.config.js"
  ],
  "include": [
    "types/*.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
